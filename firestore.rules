rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Waivers are written via Cloud Functions only (admin SDK bypasses rules)
    match /waivers/{document=**} {
      allow read, write: if false;
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
