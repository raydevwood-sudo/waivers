rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Waivers collection - allow public writes, no reads from client
    match /waivers/{document=**} {
      allow read: if false;  // No reading from client (for privacy)
      allow write: if true;  // Allow public waiver submissions
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
